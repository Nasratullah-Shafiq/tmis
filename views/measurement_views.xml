<odoo>
    <record id="action_tailor_measurement" model="ir.actions.act_window">
        <field name="name">Measurements</field>
        <field name="res_model">tailor.measurement</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_tailor_measurement_tree" model="ir.ui.view">
        <field name="name">tailor.measurement.tree</field>
        <field name="model">tailor.measurement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="clothing_type"/>
            </tree>
        </field>
    </record>


    <record id="view_tailor_measurement_form" model="ir.ui.view">
        <field name="name">tailor.measurement.form</field>
        <field name="model">tailor.measurement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="clothing_type"/>
                    </group>
                    <group string="Measurements">
                        <field name="chest"/>
                        <field name="waist"/>
                        <field name="hip"/>
                        <field name="shoulder"/>
                        <field name="sleeve"/>
                        <field name="length"/>
                    </group>
                    <field name="note"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>